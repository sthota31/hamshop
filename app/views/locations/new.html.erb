<div class="container-fluid" style="padding-top:50px">
    <div class="row-fluid">
        <div class="span9">
<h4 style="align:left;">New Location</h4>

<ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<%= form_for @location, :url => locations_path, :html => { :multipart => true } do |f| %>
<%= render :partial => 'form', :locals => {:f => f} %> 
<% end %>

	</div>
</div>
</div>
